Exercício de LP2 E1

#include <iostream>
#include <stdlib.h>
#include <cmath>

using namespace std;

const double euler = 2.7182;

int main()
{
    double v[5];
    int i = 0;
    do {
        cout << "Insira o " << i+1 << "º valor para o vetor: ";
        cin >> v[i];
        if ((v[i] >= 0) && (v[i] <= 100)) {
            i++;    
        } else {
            system("clear");
            cout << "O valor deve estar situado entre 0 e 100." << endl;
            cout << endl;
        }
    } while (i < 5);
    system("clear");

    double media = 0.0;
    
    for (i = 0; i < 5; i++)
        media += v[i];
        
    media = media/5;
    
    double desvio = 0.0, temp = 0.0;
    
    for (i = 0; i < 5; i++) {
        temp = v[i] - media;
        temp = pow(temp, 2);
        desvio += temp;
    }
    
    desvio = desvio/5;
    desvio = sqrt(desvio);
    
    for (i = 0; i < 5; i++)
        printf("%.2f ", v[i]);
        
    cout << endl;
    cout << endl;
    cout << "Média dos números informados: ";
    printf("%.2f\n", media);
    cout << "Desvio padrão do conjunto: ";
    printf("%.4f\n", desvio);
    printf("%.2f * e = %.2f", v[2], v[2]*euler);
    
}
